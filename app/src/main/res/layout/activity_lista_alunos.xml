<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/activity_lista_alunos_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_lista_alunos_novo_aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/activity_lista_alunos_listview"
        android:layout_alignBottom="@id/activity_lista_alunos_listview"
        android:layout_margin="16dp"
        android:clickable="true"
        android:contentDescription="@string/adicionar_aluno"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:src="@drawable/ic_action_novo_aluno"
        android:focusable="true" />

</RelativeLayout>